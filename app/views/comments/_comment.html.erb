<div id="<%= dom_id(comment) %>">
    <%= comment.body %> |
    <%= comment.user_full_name %>
    <% if can? :delete, comment %>|
       <%= link_to 'delete', post_comment_path(@post, comment),
                        method: :delete,
                        remote: true,
                        data: { confirm: 'are you sure?'} %>
    <% end %>
    <hr>
</end>
